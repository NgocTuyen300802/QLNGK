
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using _2001200647_QLNUOCGIAIKHAT.Models;
@model _2001200647_QLNUOCGIAIKHAT.Models.CartModel
<h2>GioHang</h2>

<div class="card border-dark">
    <table class="table">
        <tr style=" background-color: lightgreen">
            <th>MÃ SẢN PHẨM</th>
            <th>TÊN SẢN PHẨM</th>
            <th>ẢNH</th>
            <th>SỐ LƯỢNG</th>
            <th> ĐƠN GIÁ</th>
            <th> THÀNH TIỀN</th>


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iCategoryID</td>
                <td width="26%">@item.sName</td>
                <td width="22%">  <img src="~/Public/image/@item.iImage" width="150%" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "Cart", new { @CategoryID = item.iCategoryID }))
                {
                    <td width="12%"><input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" size="1" /></td>
                    <td width="12%">@String.Format("{0:0,0}", item.dPrice)</td>
                    <td class="16%">@String.Format("{0:0,0}", item.iThanhTien)</td>
                    <td><a href="@Url.Action("GioHang","Cart", new { @CategoryId=item.iCategoryID})">Details</a></td>
                    <td><input type="submit" value="Update" /></td>

                }


            </tr>
        }
        <tr style="background-color:darkolivegreen">
            <td colspan="3" style="color:darkblue; font-weight:bold; text-align:right;">Tổng cộng:</td>
            <td style="color:red;font-weight: bold; ">SL :@ViewBag.TongSoLuong</td>
            <td></td>
            <td colspan="4" style="color:red;font-weight:bold;text-align:left;">Thành tiền : @String.Format("{0:0,0}", ViewBag.TongThanhTien)>VNĐ </td>

        </tr>
    </table>

</div>
