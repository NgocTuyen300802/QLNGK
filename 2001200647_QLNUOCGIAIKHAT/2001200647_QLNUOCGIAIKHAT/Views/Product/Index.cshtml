@model List<_2001200647_QLNUOCGIAIKHAT.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .maxhight {
        height: 490px;
    }
    .imgheight{
        height:200px;
        width:224px;
    }
    a{
        color:black;
        text-decoration:none;
    }
    a:hover{
        color:black;
        box-shadow: 3px 3px 3px 3px;
    }
    *{
        font-family:'Times New Roman';
    }
</style>


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
  </ol>
</nav>


<div class="container " >
    <div class="row ">

        @foreach (var item in Model)
        {

            <a class="card col-3 maxhight  " href="/product/detail/@item.Id">
                <div class="text-center">
                    <img src="~/Public/image/@item.Image" class="figure-img imgheight  text-center" />
                </div>
                <div class="card-title text-center h-50">
                    <p class="h5 text-wrap text-center">@item.Name </p>
                    <p class="h6 text-black text-center">@item.Price VND</p>
                </div>
                <div class="card-footer flex-column">
                    <div class="btn btn-dark btn-sm float-end"> Chi tiết sản phẩm </div>
                    
                     </div>
                </a>
                }
                  </div>
              
        </div>



